<Window x:Class="WpfAsyncAwaitDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAsyncAwaitDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">        
        <Label DockPanel.Dock="Top" x:Name="lblIteration" Content="0" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" RenderTransformOrigin="0.583,-0.557" Height="150" Width="150" FontSize="50"/>
                
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSync" Content="Synchronous" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Width="75" Click="button_Click"/>
            <Button x:Name="btnAsync" Content="Asynchronous" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Width="75" Click="btnAsync_Click"/>
        </StackPanel>
        
        <Label x:Name="lblOperation" Content="Waiting for actions" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="275" Foreground="Red"/>
    </DockPanel>
</Window>
